<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- MATERIALS -->

    <material name="chassis_material">
        <color rgba="0.8 0.8 0.8 1" />
        <specular rgba="0.5 0.5 0.5 1" />
    </material>

    <material name="red_wheel_material">
        <color rgba="1 0 0 1" />
    </material>

    <material name="black_wheel_material">
        <color rgba="0 0 0 1" />
    </material>

    <!-- BASE LINK -->

    <link name="base_link">
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="0 0 0.18" />
    </joint>

    <link name="chassis">
        <visual>
            <origin
                xyz="0 0 -0.18"
                rpy="0 0 ${pi/2}" />
            <geometry>
                <mesh filename="package://cengaver_rover/meshes/base_link.STL" />
            </geometry>
            <material name="chassis_material" />
        </visual>
        <collision>
            <origin
                xyz="0 0 -0.18"
                rpy="0 0 ${pi/2}" />
            <geometry>
                <mesh filename="package://cengaver_rover/meshes/base_link.STL" />
            </geometry>
        </collision>
        <inertial>
            <origin
              xyz="-7.52548912075213E-10 0.00133985465192443 0.215427058661404"
              rpy="0 0 0" />
            <mass
              value="40.1379079681851" />
            <inertia
              ixx="1.16900142531114"
              ixy="0.00108521345983988"
              ixz="0.133695257924101"
              iyy="1.25971045307986"
              iyz="-0.00509655633734715"
              izz="2.16268381145349" />
          </inertial>
        
    </link>

    <gazebo reference="chassis">
        <material>PR2/Grey1   </material>
      </gazebo>

